generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// sample
model Post {
  id        Int     @id @default(autoincrement()) // PK
  title     String  @db.VarChar(255) // 제목
  content   String? // 내용
  published Boolean @default(false) // 발행여부

  // authorId 는 User.id 를 참조함.
  author   User @relation(fields: [authorId], references: [id]) // 저자
  authorId Int // 참조키

  createdAt DateTime @default(now()) // 생성일
  updatedAt DateTime @updatedAt // 수정일
}

model User {
  id    Int     @id @default(autoincrement()) // PK
  email String  @unique // 이메일
  name  String?

  // User:Post = 1:N
  posts Post[]

  // User:Profile = 1:1(0)
  profile    Profile?
  TravelNote TravelNote[]
}

model Profile {
  id Int @id @default(autoincrement())

  // userId는 User.id를 참조함
  user   User @relation(fields: [userId], references: [id])
  userId Int  @unique
}

// 여행
model TravelNote {
  id        Int      @id @default(autoincrement()) // PK
  startDate DateTime @db.Date // 여행 시작일
  endDate   DateTime @db.Date // 여행 종료일

  title     String // 제목
  review    String? // 여행기
  createdAt DateTime @default(now()) // 생성일
  updatedAt DateTime @updatedAt // 수정일

  city String // 도시

  images TravelImage[]
  User   User?         @relation(fields: [userId], references: [id])
  userId Int?
}

// 여행 이미지
model TravelImage {
  id        Int      @id @default(autoincrement()) // PK
  url       String // 이미지 URL
  createdAt DateTime @default(now()) // 생성일

  travel   TravelNote @relation(fields: [travelId], references: [id])
  travelId Int // 참조키
}
